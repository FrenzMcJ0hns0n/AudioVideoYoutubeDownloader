<Window x:Class="AnotherYoutubeAudioDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnotherYoutubeAudioDownloader"
        mc:Ignorable="d"
        Title="Another Youtube audio/video downloader v1.1"
        Width="800"
        Height="440"
        ResizeMode="CanMinimize"
        MouseDown="Window_MouseDown"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1.2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="16" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="16" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="2"
               Grid.Column="3"
               Grid.ColumnSpan="4"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Content="URL d'une vidéo Youtube OU lien vers un fichier vidéo"
               />

        <TextBox x:Name="TextBox_url" 
                 Grid.Row="3"
                 Grid.RowSpan="2"
                 Grid.Column="1"
                 Grid.ColumnSpan="8"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 Margin="0,0,20,0"
                 Background="#F2F2F2"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 FontSize="14"
                 Cursor="Arrow"
                 PreviewDragOver="TextBox_url_PreviewDragOver"
                 Drop="TextBox_url_Drop"
                 AllowDrop="True"
                 />
        <Button x:Name="Button_Reset" 
                Grid.Row="3"
                Grid.Column="8"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Background="Transparent"
                Foreground="DarkRed"
                Content="&#x274c;" 
                Click="Button_Reset_Click"
                ToolTip="Effacer texte"
                />
        <Button x:Name="Button_ToggleReadOnly"
                Grid.Row="4"
                Grid.Column="8"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Background="Transparent"
                Content="&#x1f58b;" 
                Click="Button_ToggleReadOnly_Click"
                ToolTip="Activer/désactiver lecture seule"
                />

        <Label Grid.Row="6"
               Grid.Column="4"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Content="Qualité audio MP3"
               />
        <Border Grid.Row="7"
                Grid.RowSpan="2"
                Grid.Column="2"
                Grid.ColumnSpan="6"
                BorderBrush="DarkGray"
                BorderThickness="1"
                />
        
        <!-- TODO : Border-innered Grid : to be able to ToolTip the all the border above the items -->
        
        <!-- ToolTip="Sélection de la qualité audio :&#x0d;&#x0a;
        - 128kbps : idéal pour des podcasts&#x0d;&#x0a;
        - 256kbps = qualité standard pour la musique&#x0d;&#x0a;
        - 320kbps = qualité maximale&#x0d;&#x0a;&#x0d;&#x0a;
        Attention, plus la valeur est haute, plus le fichier .mp3 sera volumineux."-->
        
        <RadioButton x:Name="RadioButton_mp3_128" 
                     Grid.Row="7"
                     Grid.RowSpan="2"
                     Grid.Column="3"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     GroupName="Audiopreset"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     Content="128kbps" 
                     Checked="RadioButton_mp3_128_Checked"
                     />
        <RadioButton x:Name="RadioButton_mp3_256" 
                     Grid.Row="7"
                     Grid.RowSpan="2"
                     Grid.Column="4"
                     Grid.ColumnSpan="2"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     GroupName="Audiopreset"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     Content="256kbps" 
                     Checked="RadioButton_mp3_256_Checked"
                     />
        <RadioButton x:Name="RadioButton_mp3_320" 
                     Grid.Row="7"
                     Grid.RowSpan="2"
                     Grid.Column="6"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     GroupName="Audiopreset"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     Content="320kbps" 
                     Checked="RadioButton_mp3_320_Checked"
                     />
        
        <!--<CheckBox x:Name="CheckBox_KeepSourceVideo"
                  Grid.Row="10" 
                  Grid.Column="3"
                  Grid.ColumnSpan="3"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="13"
                  Content="Conserver la vidéo source" 
                  Checked="CheckBox_KeepSourceVideo_Checked" 
                  Unchecked="CheckBox_KeepSourceVideo_Unchecked"
                  />-->
