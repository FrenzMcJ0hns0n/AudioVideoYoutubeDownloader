                Grid.Row="9"
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="6"
                FontSize="13"
                Content="Réglages audio"
                />-->
        <!--<Button x:Name="Button_Destination"
                Grid.Row="9"
                Grid.Column="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="6"
                FontSize="13"
                Content="Définir destination" 
                Click="Button_Destination_Click"
                />-->
        <!--<Button x:Name="Button_Test"
                Grid.Row="13"
                Grid.Column="7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="16"
                Content="TEST" Click="Button_Test_Click"
                />-->
        
        <Button x:Name="Button_Download"
                Grid.Row="11"
                Grid.RowSpan="2"
                Grid.Column="3"
                Grid.ColumnSpan="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="120,0,120,0"
                FontWeight="DemiBold"
                FontSize="16"
                Content="Télécharger / Extraire"
                Click="Button_Download_Click"
                />

        <Button x:Name="Button_ToAudioFolder"
                Grid.Row="13"
                Grid.RowSpan="3"
                Grid.Column="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10,0,0,0"
                Width="37"
                Height="37"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontWeight="DemiBold"
                FontSize="14"
                Content="&#x1f3a7;" 
                ToolTip="Ouvrir le dossier audio"
                Click="Button_ToAudioFolder_Click"
                />
        <Border Grid.Row="14"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Width="29"
                BorderThickness="1"
                BorderBrush="LightGray"
                >
            <Label x:Name="Label_Help"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontWeight="DemiBold"
               FontSize="14"
               Content="?"
               />
        </Border>
        <Button x:Name="Button_ToVideoFolder"
                Grid.Row="13"
                Grid.RowSpan="3"
                Grid.Column="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,10,0"
                Width="37"
                Height="37"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="18"
                Content="&#x1f39e;"
                ToolTip="Ouvrir le dossier vidéo"
                Click="Button_ToVideoFolder_Click"
                />

    </Grid>
</Window>
